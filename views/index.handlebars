<div class="container-fluid scraper-container">

    <nav class="navbar navbar-expand-lg navbar-light menu-bar" style="background-color: #e3f2fd;">
        <a class="navbar-brand title" href="/">Mongo Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
            aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active menu-item">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item menu-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
                <li class="nav-item menu-item">
                    <a class="nav-link" href="/scrape">Scrape New Articles</a>
                </li>
                <li class="nav-item menu-item">
                    <a class="nav-link" href="/">Clear Articles</a>
                </li>
            </ul>

        </div>
    </nav>

    <div class="main-section">

        <div class="row">
            <div class="col-12 img-container">
                <img src="images/header_scraper.jpg" class='header-img' width="100%" alt="header image">
                <div class="img-text">
                    <p class="img-text-title">Mongo Scraper</p>
                    <p class="img-text-subtitle">AP News</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div id="article-section">
                    {{#each articles}}
                    <div data-id={{id}} class="article">
                        <a href="{{link}}" target="_blank" class="article-link" id="article-link-{{id}}"><span
                                class="article-title" id="article-title-{{id}}">{{title}}</span></a>
                        <div class="article-body" id="article-body-{{id}}">{{body}}</div>
                        <button data-id={{id}} id="save-article" class="article-btn">Save Article</button>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

    </div>

</div>