<div class="container scraper-container">

    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#">Mongo Scraper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
            aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Saved Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Scrape New Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Clear Articles</a>
                </li>
            </ul>

        </div>
    </nav>

    <div class="main-section">

        <div class="row">
            <div class="col-12">
                <img src="images/header_scraper.jpg" width="100%" height="auto" alt="header image">
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3">
                <div id="article">
                    {{#each articles}}
                    <div data-id="{{id}}">
                        <div class="article-img">{{imgLink}}</div>
                        <div class="article-body"></div>
                        <button data-id="{{id}}" class="save-btn">Save Article</button>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>

    </div>

</div>